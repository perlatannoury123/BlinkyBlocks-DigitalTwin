#include <user_code.h>
#include <layer3_generic.h>
#include <microphone.h>
#include <speaker.h>
#include <light.h>
#include <abstraction.h>
#include <speaker.h>



void BBinit() {
	setColor(GREEN);
}

void BBloop() {

	uint8_t my_distance = 0;

	uint8_t neighbors;

	neighbors = send_broadcast_message(&my_distance, sizeof(uint8_t), 1);
	    if (neighbors > 0) {
	        setColor(BLUE);  // message successfully sent
	        sleep_sec(1);
	        setColor(PURPLE);
	        sleep_sec(2);
	    }
}

uint8_t process_standard_packet(L3_packet *packet) {
	return 0;
}

void process_standard_ack(L3_packet *p) {
}

void process_standard_unack(L3_packet *p) {
}
